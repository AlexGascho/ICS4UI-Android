<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalendarViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Large">
        <item name="android:textColor">#F9FFEE</item>
        <item name="android:weekNumberColor">#F9FFEE</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="calendarHeadingCustomText">
        <item name="android:textColor">#F9FFEE</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="CalendarViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">#BA65FF</item>
        <item name="colorPrimary">#F9FFEE</item>
    </style>

    <style name="calendarViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Large">
        <item name="android:textColor">#F9FFEE</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="CustomStatusTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">16dp</item>
    </style>

    <style name="SpinnerTheme">
        <item name="android:background">@drawable/spinner_icon</item>
    </style>

    <style name="button_custom">
        <item name="colorPrimary">@color/buttonPurple</item>
        <item name="colorAccent">@color/buttonOutline</item>
    </style>

    <style name="button_cancel">
        <item name="colorPrimary">@color/lightGreen</item>
        <item name="colorAccent">@color/buttonOutline</item>
    </style>

    <style name="purpleButton">
        <item name="android:background">@drawable/purple_button</item>
        <item name="colorPrimary">@color/buttonPurple</item>
        <item name="colorAccent">@color/buttonOutline</item>
    </style>

    <style name="searchTheme">
        <item name="android:background">@drawable/search_background</item>
    </style>

    <style name="PickerButton" parent="@android:style/Widget.Spinner">
        <item name="android:background">@drawable/fake_spinner</item>
    </style>

    <style name="SwitchStyle" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <item name="android:background">@color/black</item>
    </style>

    <style name="spinnerDropdownStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:popupBackground">@color/translucentGreen</item>
        <item name="android:background">@drawable/spinner_item_background</item>
    </style>
</resources>