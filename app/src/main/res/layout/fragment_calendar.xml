<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CalendarFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#526863"
        android:backgroundTint="#526863">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="650dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/monthYearTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="March 2022"
                android:textAlignment="center"
                android:textColor="#F9FFEE"
                android:textSize="23sp" />

            <ImageButton
                style="@android:style/Widget.ImageButton"
                android:layout_width="0.1dp"
                android:layout_height="27dp"
                android:layout_weight="0.1"
                android:background="#00FFFFFF"
                android:backgroundTint="#00FFFFFF"
                android:src="@drawable/filter_calendar"
                tools:src="@drawable/filter_calendar" />

            <ImageButton
                android:id="@+id/addEventImageButton"
                android:layout_width="0.1dp"
                android:layout_height="27dp"
                android:layout_weight="0.1"
                android:background="#00FFFFFF"
                android:backgroundTint="#00FFFFFF"
                android:src="@drawable/add_event" />

        </LinearLayout>

        <CalendarView
            android:id="@+id/calendarView"
            style="@style/CalendarViewCustom"
            android:layout_width="376dp"
            android:layout_height="563dp"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="19dp"
            android:background="#536863"
            android:dateTextAppearance="@style/CalendarViewDateCustomText"
            android:focusedMonthDateColor="@style/calendarMonthCustomText"
            android:theme="@style/CalendarViewCustom"
            android:weekDayTextAppearance="@style/calendarViewWeekCustomText"
            android:weekSeparatorLineColor="#F9FFEE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.542"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.376"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>