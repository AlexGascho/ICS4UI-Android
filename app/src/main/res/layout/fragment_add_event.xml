<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_event_container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGreen"
    tools:context="com.ics4ui.android.AddEventFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/dayCancel"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/green_button"
            android:text="@string/fragment_add_event_cancel"
            android:textColor="@color/lightGreen"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" /><TextView
            android:id="@+id/addEventWhiteBox"
            android:layout_width="360dp"
            android:layout_height="460dp"
            android:layout_marginTop="112dp"
            android:background="@drawable/round_corners"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/addEventTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:text="@string/add_event"
            android:textColor="@color/titleColor"
            android:textStyle="bold"
            android:textSize="40sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/titleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="1dp"
            android:text="@string/title"
            android:textColor="@color/darkPurple"
            android:textStyle="bold"
            android:textSize="30sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toStartOf="@+id/titleTextInput"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addEventTitle" />

        <TextView
            android:id="@+id/allDayTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:text="@string/all_day"
            android:textColor="@color/darkPurple"
            android:textStyle="bold"
            android:textSize="30sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleTitle" />

        <TextView
            android:id="@+id/startTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:text="@string/start"
            android:textColor="@color/darkPurple"
            android:textStyle="bold"
            android:textSize="30sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/allDayTitle" />

        <TextView
            android:id="@+id/endTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:text="@string/end"
            android:textColor="@color/darkPurple"
            android:textStyle="bold"
            android:textSize="30sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/startTitle" />

        <TextView
            android:id="@+id/locationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="1dp"
            android:text="@string/location"
            android:textColor="@color/darkPurple"
            android:textStyle="bold"
            android:textSize="30sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toStartOf="@+id/locationTextInput"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/endTitle" />


        <TextView
            android:id="@+id/descriptionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="1dp"
            android:text="@string/description"
            android:textColor="@color/darkPurple"
            android:textStyle="bold"
            android:textSize="30sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toStartOf="@+id/descriptionTextInput"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/locationTitle" />

        <TextView
            android:id="@+id/clubsGroupsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="1dp"
            android:text="@string/clubs_groups"
            android:textColor="@color/darkPurple"
            android:textStyle="bold"
            android:textSize="30sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toStartOf="@+id/groupTextInput"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptionTitle" />

        <Button
            android:id="@+id/createEventButton"
            android:layout_width="355dp"
            android:layout_height="80dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="28dp"
            android:text="@string/create_event"
            android:textColor="@color/white"
            android:textSize="37sp"
            android:theme="@style/button_custom"
            android:background="@drawable/purple_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clubsGroupsTitle" />

        <TextView
            android:id="@+id/titleTextInput"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/underline_text"
            android:contentDescription=""
            android:ems="10"
            android:gravity="bottom"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/titleTitle"
            app:layout_constraintTop_toBottomOf="@+id/addEventTitle" />

        <TextView
            android:id="@+id/locationTextInput"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/underline_text"
            android:gravity="bottom"
            android:text=""
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/locationTitle"
            app:layout_constraintTop_toBottomOf="@+id/endTitle" />

        <TextView
            android:id="@+id/groupTextInput"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/underline_text"
            android:ems="10"
            android:gravity="bottom"
            android:text=""
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/clubsGroupsTitle"
            app:layout_constraintTop_toBottomOf="@+id/descriptionTextInput" />

        <TextView
            android:id="@+id/descriptionTextInput"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/underline_text"
            android:ems="10"
            android:gravity="bottom"
            android:text=""
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/descriptionTitle"
            app:layout_constraintTop_toBottomOf="@+id/locationTextInput" />

        <Button
            android:id="@+id/startTimeButton"
            style="?android:spinnerStyle"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="25dp"
            android:hint="@string/start_time"
            app:layout_constraintStart_toEndOf="@+id/startTitle"
            app:layout_constraintTop_toBottomOf="@+id/allDaySwitch" />

        <Switch
            android:id="@+id/allDaySwitch"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="20dp"
            android:text=""
            app:layout_constraintStart_toEndOf="@+id/allDayTitle"
            app:layout_constraintTop_toBottomOf="@+id/titleTextInput" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>